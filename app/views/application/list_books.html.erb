<!-- app/views/application/list_books.html.erb -->

<html>
  <body>

    <div class="books">
      <% books.each do |book| %>
        <div class="book">

          <h1 class="title">
            <%= book['title'] %>
          </h1>
          <h2 class="author">by <%= book['author'] %></h2>
          <p class="summary">
            <%= book['summary'] %>
          </p>

          <small class="meta">
            <em class="ISBN" >ISBN number: <%= book['ISBN'] %></em><br>
            <em class="published">published in <%= book['published'] %></em>
            <span class="in"> <% book['in'] %>-</span>
          </small>

        </div>
        <hr />
      <% end %>
    </div>

  </body>
</html>