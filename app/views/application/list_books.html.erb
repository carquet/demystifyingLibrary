<!-- app/views/application/list_books.html.erb -->

<html>
  <body>
<a href="/new_book">Add a new book</a>
    <div class="books">
      <% books.each do |book| %>
        <div class="book">

          <a href="/show_book/<%= book['id'] %>"> 
          <h1 class="title">
            <%= book['title'] %>
          </h1></a>
          <h2 class="author">by <%= book['author'] %></h2>
          <p class="summary">
            <%= book['summary'] %>
          </p>

          <small class="meta">
            <em class="ISBN" >ISBN number: <%= book['ISBN'] %></em><br>
            <span class="in"> <%= book['in'] %>-</span>
          </small>

        </div>
        <hr />

      <% end %>
    </div>

  </body>
</html>