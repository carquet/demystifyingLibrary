<!-- app/views/application/edit_book.html.erb -->

<html>
  <body>
    <div class="errors">
      <% book.errors.each do |attribute, error| %>
        <p class="error" style="color: orange">
          The <%= attribute %> <%= error %>
        </p>
      <% end%>
    </div>

    <form method="post" action="/update_book/<%= book.id %>">

      <label for="title"> Title</label>
      <input id="title" name="title" type="text" value="<%= book.title %>"/>
      <br /> <br />

      <label for="body"> Summary</label>
      <textarea id="body" name="summary"><%= book.summary %></textarea>
      <br /> <br />

      <label for="author"> Author</label>
      <input id="author" name="author" type="text" value="<%= book.author %>"/>
      <br /> <br />

      <label>ISB number</label>
      <input name="isbn" type="text" value="<%= book.isbn %>" />
      <br /> <br />

      <label>Available</label>
      <input name="in" type="checkbox" checked/>
      <br /> <br />

      <input type="submit" value="Update Book" />

    </form>

    <br />
    <a href="/list_books">Back to Books</a>

  </body>
</html>